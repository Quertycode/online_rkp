@echo off
REM Скрипт для полной очистки БД и изображений (Windows)

echo ============================================================
echo   ОЧИСТКА БАЗЫ ДАННЫХ
echo ============================================================
echo.
echo ВНИМАНИЕ! Будут удалены ВСЕ данные и изображения!
echo.
set /p confirm="Вы уверены? (введите 'да' для подтверждения): "

if /i not "%confirm%"=="да" (
    echo Отменено.
    pause
    exit /b 0
)

echo.
echo Очистка данных...
python clean_db.py --confirm

if %ERRORLEVEL% NEQ 0 (
    echo ОШИБКА при очистке!
    pause
    exit /b 1
)

echo.
echo ============================================================
echo   ГОТОВО! База данных очищена
echo ============================================================
echo.
pause


